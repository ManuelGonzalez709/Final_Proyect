<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoApp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoApp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="0dp">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:backgroundTint="@color/Rojo3"
                    android:elevation="@dimen/cardview_compat_inset_shadow"
                    app:cardCornerRadius="10dp"
                    >
                    <TextView
                        android:textColor="@color/white"
                        android:paddingVertical= "2dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Añadir Anuncio"
                        android:textSize="20dp"
                        />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/Rojo1"
                    app:cardCornerRadius="13dp"
                    >
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteY="0dp">
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Titulo*"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="340dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/Rojo2"
                            android:elevation="30dp"
                            app:cardCornerRadius="12dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/newTitulo"
                                    android:layout_width="280dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:textColor="@color/white"
                                    android:hint="Titulo"
                                    android:textColorHint="@color/white"
                                    android:singleLine="true" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/newTitulo"
                                    android:layout_toRightOf="@id/newTitulo"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="6dp"
                                    app:cardBackgroundColor="@color/Rojo3">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/anuncio"
                                        />
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/white"
                            android:text="Descripcion*"
                            android:textSize="20dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="340dp"
                            android:layout_height="120dp"
                            android:backgroundTint="@color/Rojo2"
                            android:elevation="30dp"
                            app:cardCornerRadius="12dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/newDescripcion"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:maxLines="5"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:textColor="@color/white" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Precio*"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="340dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/Rojo2"
                            android:elevation="30dp"
                            app:cardCornerRadius="12dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/newPrecio"
                                    android:layout_width="280dp"
                                    android:inputType="numberDecimal"
                                    android:layout_height="40dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:textColorHint="@color/white"
                                    android:textColor="@color/white"
                                    android:hint="Precio"
                                    android:singleLine="true" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@id/newPrecio"
                                    android:layout_toRightOf="@id/newPrecio"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="6dp"
                                    app:cardBackgroundColor="@color/Rojo3">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/euro"
                                        />
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginRight="30dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/Rojo1"
                                android:elevation="30dp"
                                app:cardCornerRadius="8dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Estado*"
                                android:textSize="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Categoria*"
                                android:layout_marginLeft="60dp"
                                android:textSize="20dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/Rojo2"
                                android:elevation="30dp"
                                app:cardCornerRadius="8dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <Spinner
                                        android:id="@+id/newEstado"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        >

                                    </Spinner>

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/Rojo2"
                                android:elevation="30dp"
                                app:cardCornerRadius="8dp"
                                android:layout_marginLeft="30dp"
                                >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <Spinner
                                        android:id="@+id/newCategoria"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        >

                                    </Spinner>

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Ubicacion*"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginRight="30dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Rojo1"
                        android:elevation="30dp"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <AutoCompleteTextView
                                android:textColor="@color/white"
                                android:id="@+id/newUbicacion"
                                android:layout_width="325dp"
                                android:layout_height="wrap_content">
                            </AutoCompleteTextView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Fotos*"
                    android:textSize="20dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:layout_width="340dp"
                    android:layout_height="220dp"
                    android:backgroundTint="@color/Rojo1"
                    app:cardCornerRadius="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:id="@+id/recycler"
                            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <Button
                                android:id="@+id/btaddFoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Añadir Foto"
                                android:layout_marginRight="3dp"
                                android:backgroundTint="@color/Rojo2"/>
                            <Button
                                android:id="@+id/btremoveFoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eliminar Foto"
                                android:layout_marginLeft="3dp"
                                android:backgroundTint="@color/Rojo2"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btnewCrearAnuncio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear Anuncio"
                        android:backgroundTint="@color/Rojo2"/>

                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>